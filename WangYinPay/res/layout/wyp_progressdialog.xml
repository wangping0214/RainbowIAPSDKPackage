<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@drawable/wyp_progressdialog_bg"
	android:gravity="center_horizontal"
	android:minWidth="120dp"
	android:orientation="vertical"
	android:padding="@dimen/wyp_space_middle" >

	<ImageView
		android:id="@+id/img_loading"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:scaleType="center"
		android:src="@drawable/wyp_loading" />

	<TextView
		android:id="@+id/txt_loading_message"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="@color/txt_bright"
		android:layout_marginTop="@dimen/wyp_space_middle"
		android:textSize="@dimen/wyp_txt_middle" />

</LinearLayout>