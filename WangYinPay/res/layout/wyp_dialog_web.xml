<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/wyp_dialog"
		android:orientation="vertical"
		android:padding="0dp" >

		<RelativeLayout
				android:id="@+id/title"
				android:layout_width="fill_parent"
				android:layout_height="@dimen/wyp_title_height"
				android:background="@drawable/wyp_dialog_title"
				android:padding="0dp" >

				<TextView
						android:id="@+id/wyp_dialog_web_title"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:singleLine="true"
						android:text="@string/wyp_dialog_web_title"
						android:textColor="@color/txt_bright"
						android:textSize="@dimen/wyp_txt_large" />

				<Button
						android:id="@+id/wyp_dialog_cancel"
						android:layout_width="@dimen/wyp_title_height"
						android:layout_height="@dimen/wyp_title_height"
						android:layout_alignParentRight="true"
						android:layout_centerVertical="true"
						android:background="@drawable/wyp_btn_close"
						android:singleLine="true"
						android:textColor="@color/txt_bright" />
		</RelativeLayout>

		<FrameLayout
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:paddingBottom="@dimen/wyp_space_middle" >

				<com.wangyin.payments.widget.WYPWebView
						android:id="@+id/wyp_dialog_webview"
						android:layout_width="fill_parent"
						android:layout_height="fill_parent" />
		</FrameLayout>

</LinearLayout>